    </a>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Get the popup component
        const popup = document.getElementById('wesam-popup');

        // Set the popup to display with block style
        popup.style.display = 'block';

        // Auto-close after 5 seconds
        setTimeout(() => {
            popup.style.display = 'none';
        }, 5000);
    });

    function closePopup() {
        document.getElementById('wesam-popup').style.display = 'none';
    }
</script>
